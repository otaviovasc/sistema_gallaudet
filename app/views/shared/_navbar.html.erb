          <a
            href="#"
            class="block px-4 py-2 hover:bg-gray-100"
          >
            Profile
          </a>
          <!-- Sign Out -->
          <%= link_to "Sign Out", destroy_user_session_path,
              method: :delete,
              data: { turbo_method: :delete },
              class: "block px-4 py-2 hover:bg-gray-100" %>
        </div>
      </div>
    </div>
  </div>
